# Django Configuration
DJANGO_SETTINGS_MODULE=skillbridge_backend.settings.production
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your-super-secret-key-here-change-in-production
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database Configuration
DB_NAME=skillbridge
DB_USER=skillbridge
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://skillbridge:your-secure-database-password@db:5432/skillbridge

# Redis Configuration
REDIS_URL=redis://:your-redis-password@redis:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379

# External Services
OPENAI_API_KEY=your-openai-api-key
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
SENTRY_DSN=your-sentry-dsn

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production

# Application Ports (for docker-compose overrides)
DJANGO_PORT=8000
RUST_PORT=8001
DB_PORT=5432

# Logging
LOG_LEVEL=WARNING
SENTRY_ENVIRONMENT=production

# File Upload
MEDIA_URL=/media/
STATIC_URL=/static/
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static

# Celery Configuration
CELERY_BROKER_URL=redis://:your-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your-redis-password@redis:6379/0
CELERY_TIMEZONE=UTC

# Cache Configuration
CACHE_URL=redis://:your-redis-password@redis:6379/1
SESSION_CACHE_ALIAS=default

# Health Check
HEALTH_CHECK_URL=/api/v1/health/

# API Configuration
API_VERSION=v1
API_BASE_URL=https://api.yourdomain.com

# Rate Limiting
RATE_LIMIT_USER=100/hour
RATE_LIMIT_ANON=10/hour

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Monitoring
PROMETHEUS_METRICS_ENABLED=True
METRICS_PORT=9090